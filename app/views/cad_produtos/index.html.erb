<p id="notice"><%= notice %></p>

<h1>Cad Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Unidade</th>
      <th>Produto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cad_produtos.each do |cad_produto| %>
      <tr>
        <td><%= cad_produto.nome %></td>
        <td><%= cad_produto.unidade %></td>
        <td><%= cad_produto.produto %></td>
        <td><%= link_to 'Show', cad_produto %></td>
        <td><%= link_to 'Edit', edit_cad_produto_path(cad_produto) %></td>
        <td><%= link_to 'Destroy', cad_produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

